generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id             Int      @id @default(autoincrement())
  spotify_id     String   @unique
  playlistId     String
  genres         String
  name           String
  ignoredArtists Artist[] @relation("IgnoredArtists", name: "ignoredBy")
  createdAt      DateTime @default(now())
}

model Artist {
  id          Int      @id @default(autoincrement())
  spotifyId   String   @unique
  name        String
  createdAt   DateTime @default(now())
  ignoredBy   User     @relation("ignoredBy", fields: [ignoredById], references: [id], name: "IgnoredArtists")
  ignoredById Int
}
